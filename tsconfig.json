{
    "compilerOptions": {
        "target": "ES2022",
        "lib": ["ES2023"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": false,
        "esModuleInterop": true,
        "module": "Node16",
        "moduleResolution": "Node16",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "incremental": true,
        "plugins": [],
        "outDir": "./dist",
        "declaration": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/*.test.ts"]
}
